<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerLayout"
    tools:context="android.com.avishkar.Dashboard">
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="wrap_content">

        </android.support.v7.widget.Toolbar>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame"
            android:layout_below="@id/toolbar"></FrameLayout>


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:padding="20dp"
        android:fitsSystemWindows="true"

        android:layout_marginEnd="-65dp"
        android:layout_marginRight="-65dp"

        >
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="@color/colorAccent"
            android:fitsSystemWindows="true"
            android:weightSum="3"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/layout1"
                android:layout_weight="1"
                android:padding="10dp"
                android:weightSum="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/trips"

                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorYellow"
                    android:onClick="tripClick"
                    android:src="@drawable/ic_trip"

                    android:layout_height="match_parent"


                    android:layout_weight="0.4"/>
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/profile"

                    android:layout_gravity="center"
                    android:onClick="profileClick"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile"
                    android:background="@color/colorRed"
                    android:layout_weight="0.6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/layout2"
                android:layout_weight="1"
                android:padding="10dp"
                android:weightSum="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/settings"

                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:onClick="settingsClick"
                    android:src="@drawable/ic_settings"
                    android:background="@color/colorGreen"
                    android:layout_weight="0.6"/>
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/share"
                    android:layout_gravity="center"
                    android:onClick="shareClick"
                    android:src="@drawable/ic_share"

                    android:layout_height="match_parent"
                    android:background="@color/colorMajenta"
                    android:layout_weight="0.4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/layout3"
                android:padding="10dp"
                android:weightSum="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/home"
                    android:layout_gravity="center"
                    android:onClick="homeClick"
                    android:src="@drawable/ic_home"

                    android:layout_height="match_parent"
                    android:background="@color/colorBlue"
                    android:layout_weight="0.4"/>
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/explore






"
                    android:layout_gravity="center"
                    android:onClick="exploreClick"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_gallery"
                    android:background="@color/colorAccentTrans"
                    android:layout_weight="0.6"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
