    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/travel_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#fff"
        android:translationZ="10dp"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/splash"
        app:cardCornerRadius="16dp"

        app:cardElevation="20dp"
        app:contentPadding="16dp">

        <LinearLayout
            android:id="@+id/travel_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:backgroundTint="@color/splash"
            android:orientation="vertical">

            <TextView
                android:id="@+id/travel_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:text="MNNIT"
                android:textColor="@color/colorBlackTrans"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/travel_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="0.6"
                android:editable="false"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:text="Teliarganj, Allahabad UP"
                android:textColor="@color/colorBlackTrans" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/travel_lat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Lat: 25°N"
                    android:textColor="@color/colorRed" />

                <TextView
                    android:id="@+id/travel_lon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=" Lon: 81°S"
                    android:textColor="@color/colorRed" />
            </LinearLayout>


        </LinearLayout>

